{
  "python.defaultInterpreterPath": "${workspaceFolder:Authz-Schema-Sync-Check}/.venv/bin/python",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "off",
  "python.terminal.activateEnvironment": true,
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.args": [
    // NOTE: bug in using the available interpreter: https://github.com/microsoft/vscode-mypy/issues/191
    // as well as the config. Annoying, but it works.
    "--python-executable=${workspaceFolder:Authz-Schema-Sync-Check}/.venv/bin/python",
    "--config=${workspaceFolder:Authz-Schema-Sync-Check}/pyproject.toml"
  ],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
    "python.testing.pytestArgs": [
        "tests",
        "-s",
        "-vvv",
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "${workspaceFolder:Authz-Schema-Sync-Check}/.venv/bin/pytest",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "ruff.interpreter": ["${workspaceFolder:Authz-Schema-Sync-Check}/.venv/bin/python"],
  "debugpy.debugJustMyCode": false
}
